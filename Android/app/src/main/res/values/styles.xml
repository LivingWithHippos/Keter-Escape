<resources>

   <style name="Base.Theme.SCP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnSurface">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
        <item name="colorSurface">@color/secondaryLightColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/primaryColor</item>
    </style>

    <style name="Theme.SCP" parent="Base.Theme.SCP"/>

    <style name="Theme.SCP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SCP.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.SCP.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
