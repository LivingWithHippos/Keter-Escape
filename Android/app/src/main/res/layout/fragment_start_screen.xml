<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture_stairs"
    tools:context=".main.activity.view.StartScreenFragment">

    <ImageView
        android:id="@+id/iv_scp_logo"
        android:layout_width="@dimen/logo_phone_width"
        android:layout_height="@dimen/logo_phone_height"
        android:contentDescription="@string/foundation_logo"
        android:src="@drawable/scp_logo"
        android:tint="@color/white_500"
        app:layout_constraintBottom_toTopOf="@+id/tvWelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="@string/welcome_d"
        android:textColor="@color/white_500"
        app:layout_constraintBottom_toTopOf="@+id/llButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_scp_logo" />

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome">

        <Button
            android:id="@+id/bNewGame"
            android:layout_width="@dimen/buttons_start_menu_width"
            android:layout_height="@dimen/buttons_start_menu_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background_transparent"
            android:textAllCaps="false"
            android:text="@string/new_game" />

        <Button
            android:id="@+id/bLoadGame"
            android:layout_width="@dimen/buttons_start_menu_width"
            android:layout_height="@dimen/buttons_start_menu_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:background="@drawable/button_background_transparent"
            android:text="@string/load_game" />

        <Button
            android:id="@+id/bSettings"
            android:layout_width="@dimen/buttons_start_menu_width"
            android:layout_height="@dimen/buttons_start_menu_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:background="@drawable/button_background_transparent"
            android:text="@string/settings" />

        <Button
            android:id="@+id/bAbout"
            android:layout_width="@dimen/buttons_start_menu_width"
            android:layout_height="@dimen/buttons_start_menu_height"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:background="@drawable/button_background_transparent"
            android:text="@string/about" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>