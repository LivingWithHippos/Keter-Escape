<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvPlayer"
    android:layout_width="150dp"
    android:layout_height="120dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white_500"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <!--We ignore UseCompoundDrawables because we need the image id to use onClick-->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:elevation="2dp"
            android:id="@+id/ivPlayerPic"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:scaleType="center"
            android:contentDescription="@string/tap_for_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white_800"
            app:srcCompat="@drawable/add_player"
            />

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:text="@string/player_name"
            android:fontFamily="@font/space_mono"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:minLines="2"
            android:textColor="@color/black_400"
            app:layout_constraintTop_toTopOf="@+id/ivPlayerPic"
            app:layout_constraintBottom_toBottomOf="@+id/ivPlayerPic"
            app:layout_constraintStart_toEndOf="@+id/ivPlayerPic"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/ivQRCode"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="3dp"
            app:layout_constraintTop_toBottomOf="@+id/ivPlayerPic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivPlayerPic"
            app:layout_constraintEnd_toEndOf="@id/ivPlayerPic"
            android:scaleType="fitStart"
            android:src="@drawable/qr_code"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivChip"
            android:layout_width="35dp"
            android:layout_height="26dp"
            android:elevation="3dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivQRCode"
            android:scaleType="fitXY"
            android:background="@color/white_800"
            android:src="@drawable/chip"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivLogoBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivPlayerPic"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            android:alpha="0.05"
            android:tint="#123456"
            android:src="@drawable/scp_logo"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

